<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.lympaljj.LoginActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/LA_icon_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/nav_icon"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/Tusername"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:hint="Enter you name My Lord"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/Tpassword"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/Tpassword"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:hint="Enter you pass My Lord"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/Tusername"
        android:layout_alignStart="@+id/Tusername" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:hint="Login in My Lord"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/Tusername"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
